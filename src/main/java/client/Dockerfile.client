# Stage 1: Build Maven
FROM maven:3.9.6-eclipse-temurin-21 AS build
WORKDIR /app

COPY pom.xml .
COPY src ./src

RUN mvn clean package -DskipTests

# Stage 2: Runtime
FROM eclipse-temurin:21-jdk
WORKDIR /app

COPY --from=build /app/target/*-shaded.jar app.jar

# DÃ©marre le client automatiquement
ENTRYPOINT ["java", "-jar", "app.jar", "client", "-p", "1234", "-h", "blackjack-server"]

# Pour pouvoir taper dans le client
ENV TERM=xterm
